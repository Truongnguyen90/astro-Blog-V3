---
/**
 * Admin Login Page
 *
 * Provides authentication options:
 * - OAuth (GitHub, Google)
 * - Magic Link (email)
 *
 * Redirects to /admin on successful authentication.
 */

import Button from '@/components/fundations/elements/Button.astro';
import Text from '@/components/fundations/elements/Text.astro';

const siteTitle = 'Admin Login - Flaco';
const description = 'Sign in to access the admin dashboard';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{siteTitle}</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-neutral-50 dark:bg-neutral-950">
    <div class="min-h-screen flex items-center justify-center px-4 py-12">
      <div class="w-full max-w-md">
        <div class="bg-white dark:bg-neutral-900 rounded-lg shadow-lg p-8 space-y-6">
          <!-- Header -->
          <div class="text-center space-y-2">
            <Text tag="h1" variant="h2" class="text-neutral-900 dark:text-neutral-50">
              Admin Login
            </Text>
            <Text tag="p" variant="body" class="text-neutral-600 dark:text-neutral-400">
              Sign in to access the dashboard
            </Text>
          </div>

          <!-- OAuth Providers -->
          <div class="space-y-3">
            <Button
              id="github-login"
              variant="secondary"
              size="medium"
              class="w-full justify-center"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              Continue with GitHub
            </Button>

            <Button
              id="google-login"
              variant="secondary"
              size="medium"
              class="w-full justify-center"
            >
              <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              Continue with Google
            </Button>
          </div>

          <!-- Divider -->
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-neutral-300 dark:border-neutral-700"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-2 bg-white dark:bg-neutral-900 text-neutral-500 dark:text-neutral-400">
                Or continue with email
              </span>
            </div>
          </div>

          <!-- Magic Link Form -->
          <form id="magic-link-form" class="space-y-4">
            <div>
              <label for="email" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">
                Email address
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="you@example.com"
                class="w-full px-4 py-2 border border-neutral-300 dark:border-neutral-700 rounded-md bg-white dark:bg-neutral-800 text-neutral-900 dark:text-neutral-100 focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>

            <Button
              type="submit"
              variant="primary"
              size="medium"
              class="w-full justify-center"
            >
              Send magic link
            </Button>
          </form>

          <!-- Status Messages -->
          <div id="status-message" class="hidden">
            <div class="p-4 rounded-md" id="status-content"></div>
          </div>

          <!-- Back to Site -->
          <div class="text-center pt-4 border-t border-neutral-200 dark:border-neutral-800">
            <a
              href="/"
              class="text-sm text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-neutral-100"
            >
              ‚Üê Back to site
            </a>
          </div>
        </div>
      </div>
    </div>

    <script>
      import { supabase } from '@/utils/admin/supabase';

      // Status message helper
      function showStatus(message: string, type: 'success' | 'error' | 'info') {
        const statusDiv = document.getElementById('status-message');
        const statusContent = document.getElementById('status-content');

        if (!statusDiv || !statusContent) return;

        const colors = {
          success: 'bg-green-50 dark:bg-green-900/20 text-green-800 dark:text-green-200 border border-green-200 dark:border-green-800',
          error: 'bg-red-50 dark:bg-red-900/20 text-red-800 dark:text-red-200 border border-red-200 dark:border-red-800',
          info: 'bg-blue-50 dark:bg-blue-900/20 text-blue-800 dark:text-blue-200 border border-blue-200 dark:border-blue-800'
        };

        statusContent.className = `p-4 rounded-md ${colors[type]}`;
        statusContent.textContent = message;
        statusDiv.classList.remove('hidden');
      }

      // Check if already authenticated
      async function checkAuth() {
        const { data: { session } } = await supabase.auth.getSession();
        if (session) {
          window.location.href = '/admin';
        }
      }

      // GitHub OAuth Login
      const githubButton = document.getElementById('github-login');
      githubButton?.addEventListener('click', async () => {
        try {
          const { error } = await supabase.auth.signInWithOAuth({
            provider: 'github',
            options: {
              redirectTo: `${window.location.origin}/admin`
            }
          });

          if (error) throw error;
        } catch (error) {
          console.error('GitHub login error:', error);
          showStatus('Failed to sign in with GitHub. Please try again.', 'error');
        }
      });

      // Google OAuth Login
      const googleButton = document.getElementById('google-login');
      googleButton?.addEventListener('click', async () => {
        try {
          const { error } = await supabase.auth.signInWithOAuth({
            provider: 'google',
            options: {
              redirectTo: `${window.location.origin}/admin`
            }
          });

          if (error) throw error;
        } catch (error) {
          console.error('Google login error:', error);
          showStatus('Failed to sign in with Google. Please try again.', 'error');
        }
      });

      // Magic Link Form
      const magicLinkForm = document.getElementById('magic-link-form') as HTMLFormElement;
      magicLinkForm?.addEventListener('submit', async (e) => {
        e.preventDefault();

        const emailInput = document.getElementById('email') as HTMLInputElement;
        const email = emailInput.value;

        try {
          const { error } = await supabase.auth.signInWithOtp({
            email,
            options: {
              emailRedirectTo: `${window.location.origin}/admin`
            }
          });

          if (error) throw error;

          showStatus('Check your email for the magic link!', 'success');
          emailInput.value = '';
        } catch (error) {
          console.error('Magic link error:', error);
          showStatus('Failed to send magic link. Please try again.', 'error');
        }
      });

      // Check auth on page load
      checkAuth();
    </script>
  </body>
</html>
