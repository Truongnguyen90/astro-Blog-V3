---
/**
 * Admin Dashboard Homepage
 *
 * Overview of site statistics and quick actions.
 */

import AdminLayout from '@/layouts/AdminLayout.astro';
import Text from '@/components/fundations/elements/Text.astro';
import Button from '@/components/fundations/elements/Button.astro';
import { getCollection } from 'astro:content';

// Get content statistics
const posts = await getCollection('posts');
const projects = await getCollection('projects');
const work = await getCollection('work');
const store = await getCollection('store');

// Calculate stats
const publishedPosts = posts.filter(p => p.data.pubDate <= new Date());
const draftPosts = posts.length - publishedPosts.length;
const liveProjects = projects.filter(p => p.data.live);
const totalTags = [...new Set(posts.flatMap(p => p.data.tags || []))];

// Recent posts
const recentPosts = posts
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 5);
---

<AdminLayout title="Dashboard">
  <!-- Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Posts Stat -->
    <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-neutral-200 dark:border-neutral-800">
      <div class="flex items-center justify-between mb-2">
        <Text tag="p" variant="caption" class="text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">
          Blog Posts
        </Text>
        <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </div>
      <Text tag="p" variant="display" class="text-3xl font-bold text-neutral-900 dark:text-neutral-50 mb-1">
        {posts.length}
      </Text>
      <Text tag="p" variant="caption" class="text-neutral-600 dark:text-neutral-400">
        {publishedPosts.length} published, {draftPosts} drafts
      </Text>
    </div>

    <!-- Projects Stat -->
    <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-neutral-200 dark:border-neutral-800">
      <div class="flex items-center justify-between mb-2">
        <Text tag="p" variant="caption" class="text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">
          Projects
        </Text>
        <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
      </div>
      <Text tag="p" variant="display" class="text-3xl font-bold text-neutral-900 dark:text-neutral-50 mb-1">
        {projects.length}
      </Text>
      <Text tag="p" variant="caption" class="text-neutral-600 dark:text-neutral-400">
        {liveProjects.length} live projects
      </Text>
    </div>

    <!-- Work Items Stat -->
    <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-neutral-200 dark:border-neutral-800">
      <div class="flex items-center justify-between mb-2">
        <Text tag="p" variant="caption" class="text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">
          Work Portfolio
        </Text>
        <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
      </div>
      <Text tag="p" variant="display" class="text-3xl font-bold text-neutral-900 dark:text-neutral-50 mb-1">
        {work.length}
      </Text>
      <Text tag="p" variant="caption" class="text-neutral-600 dark:text-neutral-400">
        Portfolio items
      </Text>
    </div>

    <!-- Tags Stat -->
    <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-neutral-200 dark:border-neutral-800">
      <div class="flex items-center justify-between mb-2">
        <Text tag="p" variant="caption" class="text-neutral-500 dark:text-neutral-400 uppercase tracking-wide">
          Tags
        </Text>
        <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
        </svg>
      </div>
      <Text tag="p" variant="display" class="text-3xl font-bold text-neutral-900 dark:text-neutral-50 mb-1">
        {totalTags.length}
      </Text>
      <Text tag="p" variant="caption" class="text-neutral-600 dark:text-neutral-400">
        Unique tags
      </Text>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-neutral-200 dark:border-neutral-800 mb-8">
    <Text tag="h3" variant="h4" class="text-neutral-900 dark:text-neutral-50 mb-4">
      Quick Actions
    </Text>
    <div class="flex flex-wrap gap-3">
      <Button variant="primary" size="medium">
        <a href="/admin/media" class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Upload Media
        </a>
      </Button>
      <Button variant="secondary" size="medium">
        <a href="/admin/posts" class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          View Posts
        </a>
      </Button>
      <Button variant="secondary" size="medium">
        <a href="/admin/analytics" class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          View Analytics
        </a>
      </Button>
      <Button variant="secondary" size="medium">
        <a href="/" target="_blank" class="flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
          View Live Site
        </a>
      </Button>
    </div>
  </div>

  <!-- Recent Posts -->
  <div class="bg-white dark:bg-neutral-900 rounded-lg p-6 border border-neutral-200 dark:border-neutral-800">
    <div class="flex items-center justify-between mb-4">
      <Text tag="h3" variant="h4" class="text-neutral-900 dark:text-neutral-50">
        Recent Posts
      </Text>
      <a href="/admin/posts" class="text-sm text-blue-600 dark:text-blue-400 hover:underline">
        View all →
      </a>
    </div>
    <div class="space-y-3">
      {recentPosts.map(post => (
        <div class="flex items-center justify-between p-3 rounded-lg hover:bg-neutral-50 dark:hover:bg-neutral-800 transition-colors">
          <div class="flex-1 min-w-0">
            <Text tag="p" variant="body" class="font-medium text-neutral-900 dark:text-neutral-50 truncate">
              {post.data.title}
            </Text>
            <Text tag="p" variant="caption" class="text-neutral-500 dark:text-neutral-400">
              {post.data.pubDate.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric'
              })}
              {post.data.author && ` • ${post.data.author}`}
            </Text>
          </div>
          <a
            href={`/blog/posts/${post.slug}`}
            target="_blank"
            class="ml-4 text-neutral-500 hover:text-blue-600 dark:text-neutral-400 dark:hover:text-blue-400"
            title="View post"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>

  <!-- System Info -->
  <div class="mt-8 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
    <div class="flex items-start space-x-3">
      <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <Text tag="p" variant="body" class="font-medium text-blue-900 dark:text-blue-100 mb-1">
          Admin Dashboard - Phase 2 Complete
        </Text>
        <Text tag="p" variant="caption" class="text-blue-700 dark:text-blue-300">
          Authentication system is ready. Configure your Supabase project to enable OAuth providers and start managing your content.
        </Text>
      </div>
    </div>
  </div>
</AdminLayout>
