---
/**
 * Admin Projects Overview Page
 *
 * Displays all projects with search and filter functionality.
 */

import AdminLayout from '@/layouts/AdminLayout.astro';
import ContentTable from '@/components/admin/ContentTable.astro';
import Text from '@/components/fundations/elements/Text.astro';
import Button from '@/components/fundations/elements/Button.astro';
import { getCollection } from 'astro:content';

// Get all projects, sorted by date (newest first)
const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) =>
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

// Calculate stats
const liveProjects = projects.filter(p => p.data.live).length;
const upcomingProjects = projects.length - liveProjects;

// Define table columns
const columns = [
  {
    key: 'title',
    label: 'Project',
    render: (value: string, item: any) => {
      const isLive = item.data.live;
      const statusBadge = isLive
        ? '<span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">Live</span>'
        : '<span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 dark:bg-gray-900/30 text-gray-800 dark:text-gray-300">Upcoming</span>';
      return `<span class="font-medium">${value}</span>${statusBadge}`;
    }
  },
  {
    key: 'subtitle',
    label: 'Description',
    render: (value: string) => {
      if (!value) return '-';
      return value.length > 60 ? value.substring(0, 60) + '...' : value;
    }
  },
  {
    key: 'pubDate',
    label: 'Date',
    render: (value: Date) => {
      return new Date(value).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
      });
    }
  },
  {
    key: 'live',
    label: 'Status',
    render: (value: boolean | string | undefined) => {
      if (typeof value === 'string' && value) {
        return `<a href="${value}" target="_blank" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 underline">View Project →</a>`;
      }
      return value ? 'Live' : 'Upcoming';
    }
  }
];
---

<AdminLayout title="Projects">
  <!-- Page Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-4">
      <div>
        <Text tag="h2" variant="h3" class="text-neutral-900 dark:text-neutral-50 mb-1">
          Projects
        </Text>
        <Text tag="p" variant="body" class="text-neutral-600 dark:text-neutral-400">
          {projects.length} total projects • {liveProjects} live • {upcomingProjects} upcoming
        </Text>
      </div>
      <div class="flex items-center space-x-3">
        <Button variant="secondary" size="medium">
          <a href="/projects" target="_blank" class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            View Projects
          </a>
        </Button>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="bg-white dark:bg-neutral-900 rounded-lg p-4 border border-neutral-200 dark:border-neutral-800">
      <Text tag="p" variant="caption" class="text-neutral-500 dark:text-neutral-400 uppercase tracking-wide mb-1">
        Total
      </Text>
      <Text tag="p" variant="display" class="text-2xl font-bold text-neutral-900 dark:text-neutral-50">
        {projects.length}
      </Text>
    </div>
    <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4 border border-green-200 dark:border-green-800">
      <Text tag="p" variant="caption" class="text-green-600 dark:text-green-400 uppercase tracking-wide mb-1">
        Live
      </Text>
      <Text tag="p" variant="display" class="text-2xl font-bold text-green-700 dark:text-green-300">
        {liveProjects}
      </Text>
    </div>
    <div class="bg-gray-50 dark:bg-gray-900/20 rounded-lg p-4 border border-gray-200 dark:border-gray-800">
      <Text tag="p" variant="caption" class="text-gray-600 dark:text-gray-400 uppercase tracking-wide mb-1">
        Upcoming
      </Text>
      <Text tag="p" variant="display" class="text-2xl font-bold text-gray-700 dark:text-gray-300">
        {upcomingProjects}
      </Text>
    </div>
  </div>

  <!-- Content Table -->
  <div class="bg-white dark:bg-neutral-900 rounded-lg border border-neutral-200 dark:border-neutral-800 p-6">
    <ContentTable
      items={sortedProjects}
      columns={columns}
      searchPlaceholder="Search projects by title or description..."
      emptyMessage="No projects found"
    />
  </div>

  <!-- Info Banner -->
  <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
    <div class="flex items-start space-x-3">
      <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <Text tag="p" variant="body" class="font-medium text-blue-900 dark:text-blue-100 mb-1">
          Project Management Note
        </Text>
        <Text tag="p" variant="caption" class="text-blue-700 dark:text-blue-300">
          Projects are managed as markdown files in the <code class="bg-blue-100 dark:bg-blue-900/40 px-1 py-0.5 rounded">src/content/projects/</code> directory. Edit the files directly to update project details, status, and links.
        </Text>
      </div>
    </div>
  </div>
</AdminLayout>
