---
/**
 * Admin Posts Overview Page
 *
 * Displays all blog posts with search and filter functionality.
 */

import AdminLayout from '@/layouts/AdminLayout.astro';
import ContentTable from '@/components/admin/ContentTable.astro';
import Text from '@/components/fundations/elements/Text.astro';
import Button from '@/components/fundations/elements/Button.astro';
import { getCollection } from 'astro:content';

// Get all posts, sorted by date (newest first)
const posts = await getCollection('posts');
const sortedPosts = posts.sort((a, b) =>
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
);

// Calculate stats
const now = new Date();
const published = posts.filter(p => p.data.pubDate <= now).length;
const drafts = posts.length - published;

// Define table columns
const columns = [
  {
    key: 'title',
    label: 'Title',
    render: (value: string, item: any) => {
      const isDraft = new Date(item.data.pubDate) > now;
      const draftBadge = isDraft ? '<span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300">Draft</span>' : '';
      return `<span class="font-medium">${value}</span>${draftBadge}`;
    }
  },
  {
    key: 'pubDate',
    label: 'Published',
    render: (value: Date) => {
      return new Date(value).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric'
      });
    }
  },
  {
    key: 'author',
    label: 'Author',
    render: (value: string | undefined) => value || 'Unknown'
  },
  {
    key: 'tags',
    label: 'Tags',
    render: (tags: string[] | undefined) => {
      if (!tags || tags.length === 0) return '-';
      const displayTags = tags.slice(0, 3);
      const remaining = tags.length - 3;
      const tagBadges = displayTags.map(tag =>
        `<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 mr-1">${tag}</span>`
      ).join('');
      const moreBadge = remaining > 0 ? `<span class="text-xs text-neutral-500 dark:text-neutral-400">+${remaining}</span>` : '';
      return tagBadges + moreBadge;
    }
  }
];
---

<AdminLayout title="Posts">
  <!-- Page Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-4">
      <div>
        <Text tag="h2" variant="h3" class="text-neutral-900 dark:text-neutral-50 mb-1">
          Blog Posts
        </Text>
        <Text tag="p" variant="body" class="text-neutral-600 dark:text-neutral-400">
          {posts.length} total posts • {published} published • {drafts} drafts
        </Text>
      </div>
      <div class="flex items-center space-x-3">
        <Button variant="secondary" size="medium">
          <a href="/blog" target="_blank" class="flex items-center">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            View Blog
          </a>
        </Button>
      </div>
    </div>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white dark:bg-neutral-900 rounded-lg p-4 border border-neutral-200 dark:border-neutral-800">
      <Text tag="p" variant="caption" class="text-neutral-500 dark:text-neutral-400 uppercase tracking-wide mb-1">
        Total
      </Text>
      <Text tag="p" variant="display" class="text-2xl font-bold text-neutral-900 dark:text-neutral-50">
        {posts.length}
      </Text>
    </div>
    <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4 border border-green-200 dark:border-green-800">
      <Text tag="p" variant="caption" class="text-green-600 dark:text-green-400 uppercase tracking-wide mb-1">
        Published
      </Text>
      <Text tag="p" variant="display" class="text-2xl font-bold text-green-700 dark:text-green-300">
        {published}
      </Text>
    </div>
    <div class="bg-yellow-50 dark:bg-yellow-900/20 rounded-lg p-4 border border-yellow-200 dark:border-yellow-800">
      <Text tag="p" variant="caption" class="text-yellow-600 dark:text-yellow-400 uppercase tracking-wide mb-1">
        Drafts
      </Text>
      <Text tag="p" variant="display" class="text-2xl font-bold text-yellow-700 dark:text-yellow-300">
        {drafts}
      </Text>
    </div>
    <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4 border border-blue-200 dark:border-blue-800">
      <Text tag="p" variant="caption" class="text-blue-600 dark:text-blue-400 uppercase tracking-wide mb-1">
        Tags
      </Text>
      <Text tag="p" variant="display" class="text-2xl font-bold text-blue-700 dark:text-blue-300">
        {[...new Set(posts.flatMap(p => p.data.tags || []))].length}
      </Text>
    </div>
  </div>

  <!-- Content Table -->
  <div class="bg-white dark:bg-neutral-900 rounded-lg border border-neutral-200 dark:border-neutral-800 p-6">
    <ContentTable
      items={sortedPosts}
      columns={columns}
      searchPlaceholder="Search posts by title, author, or tags..."
      emptyMessage="No posts found"
    />
  </div>

  <!-- Info Banner -->
  <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
    <div class="flex items-start space-x-3">
      <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <Text tag="p" variant="body" class="font-medium text-blue-900 dark:text-blue-100 mb-1">
          Content Management Note
        </Text>
        <Text tag="p" variant="caption" class="text-blue-700 dark:text-blue-300">
          Posts are managed as markdown files in the <code class="bg-blue-100 dark:bg-blue-900/40 px-1 py-0.5 rounded">src/content/posts/</code> directory. To edit posts, modify the markdown files directly in your code editor.
        </Text>
      </div>
    </div>
  </div>
</AdminLayout>
