---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Assets
import { Image } from "astro:assets";
import X from "@/images/sociallogos/x.svg";
import Figma from "@/images/sociallogos/figma.svg";
import Github from "@/images/sociallogos/github.svg";
import Medium from "@/images/sociallogos/medium.svg";
import Behance from "@/images/sociallogos/behance.svg";
import Codepen from "@/images/sociallogos/codepen.svg";
import Spotify from "@/images/sociallogos/spotify.svg";
import Discord from "@/images/sociallogos/discord.svg";
import Dribbble from "@/images/sociallogos/dribbble.svg";
import Linkedin from "@/images/sociallogos/linkedin.svg";
import Stackoverflow from "@/images/sociallogos/stackoverflow.svg";
// Structure the sections with their respective items
const sections = [
  {
    title: "Professional",
    items: [
      {
        stackLogo: Linkedin,
        name: "LinkedIn",
        username: "@truongnguyen",
        url: "https://linkedin.com/in/truongnguyen",
      },
      {
        stackLogo: Behance,
        name: "Behance",
        username: "@truongnguyen",
        url: "https://behance.net/truongnguyen",
      },
      {
        stackLogo: Dribbble,
        name: "Dribbble",
        username: "@truongnguyen",
        url: "https://dribbble.com/truongnguyen",
      },
    ],
  },
  {
    title: "Social Media",
    items: [
      {
        stackLogo: X,
        name: "X (Twitter)",
        username: "@truongnguyen",
        url: "https://twitter.com/truongnguyen",
      },
      {
        stackLogo: Medium,
        name: "Medium",
        username: "@truongnguyen",
        url: "https://medium.com/@truongnguyen",
      },
    ],
  },
  {
    title: "Development & Tech",
    items: [
      {
        stackLogo: Github,
        name: "GitHub",
        username: "@truongnguyen",
        url: "https://github.com/truongnguyen",
      },
      {
        stackLogo: Codepen,
        name: "CodePen",
        username: "@truongnguyen",
        url: "https://codepen.io/truongnguyen",
      },
    ],
  },
  {
    title: "Other Platforms",
    items: [
      {
        stackLogo: Figma,
        name: "Figma Community",
        username: "@truongnguyen",
        url: "https://figma.com/@truongnguyen",
      },
      {
        stackLogo: Discord,
        name: "Discord",
        username: "@truongnguyen",
        url: "https://discord.com/users/truongnguyen",
      },
    ],
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-24">
      <div class="text-center">
        <Text
          tag="h1"
          variant="displayXL"
          class="text-balance dark:text-white text-base-900"
        >
          Let's Connect
          <span
            class="italic tracking-wide font-display dark:text-base-400 text-base-600"
          >
            find me online
          </span>
        </Text>
        <Text
          tag="p"
          variant="textLG"
          class="mt-4 dark:text-base-400 text-base-600 text-balance"
        >
          Connect with me across various platforms where I share design work, tech insights, and collaborate with the community.
        </Text>
      </div>
      <div class="mt-12 flex flex-col gap-12">
        {
          sections.map((section) => (
            <div class="flex flex-col items-start gap-6 ">
              <Text
                tag="h2"
                variant="displayMD"
                class="italic tracking-wide font-display dark:text-white text-base-900"
              >
                {section.title}
              </Text>
              <div class="flex flex-col w-full gap-2 ">
                {section.items.map((item) => (
                  <a
                    href={item.url}
                    title={item.name}
                    class="relative flex flex-col w-full h-full p-6 overflow-hidden rounded-2xl
                           bg-linear-45 from-base-50 dark:from-base-800 to-base-100 dark:to-base-950
                           shadow-[var(--neuro-shadow-light)] dark:shadow-[var(--neuro-shadow-dark)]
                           hover:shadow-[var(--neuro-shadow-hover-light)] dark:hover:shadow-[var(--neuro-shadow-hover-dark)]
                           ring-1 ring-inset ring-white/40 dark:ring-white/5
                           hover:ring-accent-400/50 dark:hover:ring-accent-500/50
                           duration-200 transition-all group cursor-pointer"
                  >
                    <div class="flex items-center gap-4 group  dark:text-base-400 text-base-600">
                      <Image
                        src={item.stackLogo}
                        alt={item.name}
                        width={200}
                        height={200}
                        class="rounded-full size-12  group-hover:-rotate-45 duration-300"
                      />
                      <div class="text-sm leading-6">
                        <Text
                          tag="h3"
                          variant="textSM"
                          class="font-medium uppercase dark:text-white text-base-900 "
                        >
                          {item.name}
                        </Text>
                        <Text
                          tag="p"
                          variant="textBase"
                          class=" dark:text-base-400 text-base-600"
                        >
                          {item.username}
                        </Text>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
