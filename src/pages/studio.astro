---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
// Components
import ContactCta from "@/components/global/ContactCta.astro";
import LogoCloud from "@/components/assets/LogoCloud.astro";
// LogoCloud from "@/components/assets/LogoCloud.astro";
// Content
const services = [
  {
    title: "Residential Interior Design",
    price: "Contact for pricing",
    items: [
      {
        description:
          "Complete interior design for homes, apartments, and residential spaces.",
        includes: [
          "Initial Consultation & Space Assessment",
          "Concept Development & Mood Boards",
          "3D Visualization & Renderings",
          "Floor Plan & Layout Design",
          "Color Palette & Material Selection",
          "Furniture & Fixture Sourcing",
          "Lighting Design & Planning",
          "Custom Millwork Design",
          "Project Management & Coordination",
          "Final Styling & Installation",
        ],
      },
    ],
  },
  {
    title: "Commercial Interior Design",
    price: "Contact for pricing",
    items: [
      {
        description:
          "Professional design services for offices, retail spaces, cafés, and commercial environments.",
        includes: [
          "Brand-Aligned Design Concepts",
          "Space Planning & Optimization",
          "Customer Flow Analysis",
          "Ergonomic Workplace Design",
          "Signage & Wayfinding",
          "Budget Planning & Management",
          "Contractor & Vendor Coordination",
          "Code Compliance & Permits",
          "3D Visualization & Presentations",
          "Post-Occupancy Support",
        ],
      },
    ],
  },
  {
    title: "Design Consultation & Tech Integration",
    price: "Contact for pricing",
    items: [
      {
        description:
          "Expert advice on design challenges, material selection, or integrating smart home technology.",
        includes: [
          "One-on-One Design Consultation",
          "Space Planning Guidance",
          "Material & Finish Selection",
          "Smart Home Integration Planning",
          "Lighting Automation Design",
          "Color & Style Recommendations",
          "Virtual Design Sessions",
          "Vendor Recommendations",
          "DIY-Friendly Design Plans",
          "Follow-Up Support",
        ],
      },
    ],
  },
];
---

<BaseLayout>
  <section>
    <Wrapper class="px-8 py-24 mx-auto">
      <div class="text-center">
        <Text
          tag="h1"
          variant="displayXL"
          class="dark:text-white text-base-900 text-balance"
        >
          Interior Design Studio
          <span
            class="italic tracking-wide font-display dark:text-base-400 text-base-700"
          >
            services
          </span>
        </Text>

        <Text
          tag="p"
          variant="textLG"
          class="mt-4 dark:text-base-400 text-base-700"
        >
          Transforming spaces through thoughtful design — from concept to completion.
        </Text>

        <LogoCloud />
      </div>
      <div class="flex flex-col mt-12 gap-2">
        {
          services.map((section) => (
            <div class="relative flex flex-col justify-between w-full h-full p-6 overflow-hidden min-h-72 rounded-2xl
                        bg-linear-45 from-base-50 dark:from-base-800 to-base-100 dark:to-base-950
                        shadow-[var(--neuro-shadow-light)] dark:shadow-[var(--neuro-shadow-dark)]
                        hover:shadow-[var(--neuro-shadow-hover-light)] dark:hover:shadow-[var(--neuro-shadow-hover-dark)]
                        ring-1 ring-inset ring-white/40 dark:ring-white/5
                        duration-300 transition-all hover:-translate-y-1 group">
              <div class="flex items-center justify-between italic font-medium tracking-wide dark:text-white text-base-900  font-display">
                <Text tag="h3" variant="displaySM" class="text-balance">
                  {section.title}
                </Text>
                <Text tag="p" variant="textBase" class="text-balance font-medium">
                  {section.price}
                </Text>
              </div>
              <div role="list" class="mt-6 ">
                {section.items.map((item) => (
                  <>
                    <Text
                      tag="p"
                      variant="textXL"
                      class=" dark:text-base-400 text-base-700 text-balance"
                    >
                      {item.description}
                    </Text>
                    <ul
                      class="mt-6 text-sm list-inside grid gap-y-2 md:grid-cols-2 gap-x-6  dark:text-base-400 text-base-700"
                      role="list"
                    >
                      {item.includes.map((feature) => (
                        <li class="flex items-center gap-2">
                          <ChevronRight class="size-4" />
                          <span class="duration-300 hover:translate-x-2">
                            {feature}
                          </span>
                        </li>
                      ))}
                    </ul>
                  </>
                ))}
              </div>
              <div class="flex mt-12 col-span-full ">
                <Button
                  isLink
                  size="sm"
                  variant="default"
                  href="/forms/contact"
                  title="Get started with interior design services"
                  aria-label="Contact for interior design services"
                >
                  Get started
                </Button>
              </div>
            </div>
          ))
        }
      </div>
      <ContactCta />
    </Wrapper>
  </section>
</BaseLayout>
