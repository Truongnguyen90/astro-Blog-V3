---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Plus from "@/components/fundations/icons/Plus.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-24 pb-12 lg:pt-32">
      <Text
        tag="h1"
        variant="displayXL"
        class="uppercase font-display text-base-900 text-base-900 dark:text-white text-balance"
        >Links</Text
      >
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard" class="py-12">
      <div class="flex flex-col gap-12">
        <div class="py-4">
          <Text
            tag="p"
            variant="textXS"
            class="font-medium uppercase text-base-900 text-base-900 dark:text-white"
          >
            Underlined link on hover
          </Text>
          <div class="flex flex-wrap items-center mt-4 gap-4">
            <Text
              tag="a"
              variant="textSM"
              underlined={true}
              title="link to your page"
              aria-label="your label"
              href="/system/overview"
              class="duration-300 dark:text-white text-base-900 text-base-900 dark:text-white"
            >
              Underlined Link
            </Text>
          </div>
        </div>

        <div class="flex flex-col gap-12">
          <!-- Default -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <Text
                tag="p"
                variant="textXS"
                class="font-medium uppercase text-base-900 text-base-900 dark:text-white"
              >
                Default text
              </Text>
              <div class="flex flex-col mt-2 gap-4">
                <Button isLink href="#_" size="xxs" variant="default"
                  >Default XXS</Button
                >
                <Button isLink href="#_" size="xs" variant="default"
                  >Default XS</Button
                >
                <Button isLink href="#_" size="sm" variant="default"
                  >Default SM</Button
                >
                <Button isLink href="#_" size="base" variant="default"
                  >Default Base</Button
                >
                <Button isLink href="#_" size="md" variant="default"
                  >Default MD</Button
                >
                <Button isLink href="#_" size="lg" variant="default"
                  >Default LG</Button
                >
                <Button isLink href="#_" size="xl" variant="default"
                  >Default XL</Button
                >
              </div>
            </div>
            <div>
              <Text
                tag="p"
                variant="textXS"
                class="font-medium uppercase text-base-900 text-base-900 dark:text-white"
              >
                Icon
              </Text>
              <div class="flex flex-col mt-2 gap-4">
                <Button isLink href="#_" size="xxs" variant="default" iconOnly
                  ><Plus slot="icon" size="sm" /></Button
                >
                <Button isLink href="#_" size="xs" variant="default" iconOnly
                  ><Plus slot="icon" size="sm" /></Button
                >
                <Button isLink href="#_" size="sm" variant="default" iconOnly
                  ><Plus slot="icon" size="base" /></Button
                >
                <Button isLink href="#_" size="base" variant="default" iconOnly
                  ><Plus slot="icon" size="base" /></Button
                >
                <Button isLink href="#_" size="md" variant="default" iconOnly
                  ><Plus slot="icon" size="lg" /></Button
                >
                <Button isLink href="#_" size="lg" variant="default" iconOnly
                  ><Plus slot="icon" size="xl" /></Button
                >
                <Button isLink href="#_" size="xl" variant="default" iconOnly
                  ><Plus slot="icon" size="xl" /></Button
                >
              </div>
            </div>
          </div>
          <!-- Accent -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <Text
                tag="p"
                variant="textXS"
                class="font-medium uppercase text-base-900 text-base-900 dark:text-white"
              >
                Accent text
              </Text>
              <div class="flex flex-col mt-2 gap-4">
                <Button isLink href="#_" size="xxs" variant="accent"
                  >Accent XXS</Button
                >
                <Button isLink href="#_" size="xs" variant="accent"
                  >Accent XS</Button
                >
                <Button isLink href="#_" size="sm" variant="accent"
                  >Accent SM</Button
                >
                <Button isLink href="#_" size="base" variant="accent"
                  >Accent Base</Button
                >
                <Button isLink href="#_" size="md" variant="accent"
                  >Accent MD</Button
                >
                <Button isLink href="#_" size="lg" variant="accent"
                  >Accent LG</Button
                >
                <Button isLink href="#_" size="xl" variant="accent"
                  >Accent XL</Button
                >
              </div>
            </div>
            <div>
              <Text
                tag="p"
                variant="textXS"
                class="font-medium uppercase text-base-900 text-base-900 dark:text-white"
              >
                Icon
              </Text>
              <div class="flex flex-col mt-2 gap-4">
                <Button isLink href="#_" size="xxs" variant="accent" iconOnly
                  ><Plus slot="icon" size="sm" /></Button
                >
                <Button isLink href="#_" size="xs" variant="accent" iconOnly
                  ><Plus slot="icon" size="sm" /></Button
                >
                <Button isLink href="#_" size="sm" variant="accent" iconOnly
                  ><Plus slot="icon" size="base" /></Button
                >
                <Button isLink href="#_" size="base" variant="accent" iconOnly
                  ><Plus slot="icon" size="base" /></Button
                >
                <Button isLink href="#_" size="md" variant="accent" iconOnly
                  ><Plus slot="icon" size="lg" /></Button
                >
                <Button isLink href="#_" size="lg" variant="accent" iconOnly
                  ><Plus slot="icon" size="xl" /></Button
                >
                <Button isLink href="#_" size="xl" variant="accent" iconOnly
                  ><Plus slot="icon" size="xl" /></Button
                >
              </div>
            </div>
          </div>
          <!-- Muted -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <Text
                tag="p"
                variant="textXS"
                class="font-medium uppercase text-base-900 text-base-900 dark:text-white"
              >
                Muted text
              </Text>
              <div class="flex flex-col mt-2 gap-4">
                <Button isLink href="#_" size="xxs" variant="muted"
                  >Muted XXS</Button
                >
                <Button isLink href="#_" size="xs" variant="muted"
                  >Muted XS</Button
                >
                <Button isLink href="#_" size="sm" variant="muted"
                  >Muted SM</Button
                >
                <Button isLink href="#_" size="base" variant="muted"
                  >Muted Base</Button
                >
                <Button isLink href="#_" size="md" variant="muted"
                  >Muted MD</Button
                >
                <Button isLink href="#_" size="lg" variant="muted"
                  >Muted LG</Button
                >
                <Button isLink href="#_" size="xl" variant="muted"
                  >Muted XL</Button
                >
              </div>
            </div>
            <div>
              <Text
                tag="p"
                variant="textXS"
                class="font-medium uppercase text-base-900 text-base-900 dark:text-white"
              >
                Icon
              </Text>
              <div class="flex flex-col mt-2 gap-4">
                <Button isLink href="#_" size="xxs" variant="muted" iconOnly
                  ><Plus slot="icon" size="sm" /></Button
                >
                <Button size="xs" variant="muted" iconOnly
                  ><Plus slot="icon" size="sm" /></Button
                >
                <Button size="sm" variant="muted" iconOnly
                  ><Plus slot="icon" size="base" /></Button
                >
                <Button isLink href="#_" size="base" variant="muted" iconOnly
                  ><Plus slot="icon" size="base" /></Button
                >
                <Button size="md" variant="muted" iconOnly
                  ><Plus slot="icon" size="lg" /></Button
                >
                <Button size="lg" variant="muted" iconOnly
                  ><Plus slot="icon" size="xl" /></Button
                >
                <Button size="xl" variant="muted" iconOnly
                  ><Plus slot="icon" size="xl" /></Button
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
