---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-24">
      <Text
        tag="h1"
        variant="displayXL"
        class="mt-12 dark:text-white text-base-900 text-balance font-display"
        >Colors</Text
      >

      <div>
        <div class="flex flex-col mt-12 gap-2">
          <Text
            tag="h3"
            variant="textXS"
            class="font-medium uppercase dark:text-white text-base-900"
            >Accent</Text
          >
          <div class="mt-2 grid grid-cols-4 gap-8">
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-accent-50">
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 50
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-accent-100">
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 100
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-accent-200">
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 200
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-accent-300">
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 300
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-accent-400">
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 400
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-accent-500">
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 500
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-accent-600">
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 600
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-accent-700">
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 700
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-accent-800">
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 800
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-accent-900">
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 900
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div
                class="rounded-full size-12 aspect-square bg-accent-950 outline outline-accent-900"
              >
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Accent 950
              </span>
            </div>
          </div>
        </div>

        <div class="flex flex-col mt-12 gap-2">
          <Text
            tag="h3"
            variant="textXS"
            class="font-medium uppercase dark:text-white text-base-900"
            >Base</Text
          >
          <div class="mt-2 grid grid-cols-4 gap-8">
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-base-50"></div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 50
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-base-100"></div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 100
              </span>
            </div>
            <div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-base-200"></div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 200
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-base-300"></div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 300
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-base-400"></div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 400
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-base-500"></div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 500
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-base-600"></div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 600
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-base-700"></div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 700
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-base-800"></div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 800
              </span>
            </div><div class="flex flex-col gap-2">
              <div class="rounded-full size-12 aspect-square bg-base-900"></div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 900
              </span>
            </div><div class="flex flex-col gap-2">
              <div
                class="rounded-full size-12 aspect-square bg-base-950 outline outline-base-900"
              >
              </div>
              <span class="text-xs dark:text-base-400 text-base-700"
                >Base 950
              </span>
            </div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
