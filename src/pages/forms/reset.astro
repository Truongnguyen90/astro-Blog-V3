---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper
      variant="standard"
      class="py-24 lg:h-svh flex flrx-col items-center justify-center"
    >
      <div class="w-full">
        <Text
          tag="h1"
          variant="displayMD"
          class="text-balance dark:text-white text-base-900 text-center"
        >
          Go ahead and reset
          <span class="block italic tracking-wide font-display">
            your password
          </span>
        </Text>
        <form class="max-w-md mx-auto mt-6">
          <!-- Email Field -->
          <div>
            <label for="email" class="sr-only">Email</label>
            <input
              id="email"
              type="email"
              name="email"
              autocomplete="email"
              aria-describedby="email"
              placeholder="Enter your email"
              class="flex-auto w-full h-10 px-3 py-2 text-center border-transparent rounded-full appearance-none outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
            />
          </div>
          <!-- Submit Button -->
          <div class="mt-2">
            <Button size="base" variant="default" type="submit" class="w-full">
              Send Reset Link
            </Button>
          </div>
          <Text
            tag="p"
            variant="textSM"
            class="mt-2 text-center dark:text-base-400 text-base-700"
          >
            We'll email you a link to reset your password.
          </Text>
        </form>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
