---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
---

<BaseLayout>
  <section>
    <Wrapper
      variant="standard"
      class="py-24 lg:h-svh flex flrx-col items-center justify-center"
    >
      <div class="w-full">
        <Text
          tag="h1"
          variant="displayMD"
          class="text-balance dark:text-white text-base-900 text-center"
        >
          Get in touch
          <span class="block italic tracking-wide font-display">
            Send me a message
          </span>
        </Text>
        <form class="max-w-md mx-auto mt-6">
          <div class="grid grid-cols-1 gap-2 sm:grid-cols-2">
            <div>
              <label for="first-name" class="sr-only">First name</label>
              <div>
                <input
                  type="text"
                  name="first-name"
                  id="first-name"
                  placeholder="Your name"
                  autocomplete="given-name"
                  class="flex-auto w-full h-10 px-3 py-2 text-center border-transparent rounded-full appearance-none outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
                />
              </div>
            </div>
            <div>
              <label for="last-name" class="sr-only">Last name</label>
              <div>
                <input
                  type="text"
                  name="last-name"
                  placeholder="Your last name"
                  id="last-name"
                  autocomplete="family-name"
                  class="flex-auto w-full h-10 px-3 py-2 text-center border-transparent rounded-full appearance-none outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label for="company" class="sr-only">Company</label>
              <div>
                <input
                  type="text"
                  name="company"
                  id="company"
                  placeholder="Company name"
                  autocomplete="organization"
                  class="flex-auto w-full h-10 px-3 py-2 text-center border-transparent rounded-full appearance-none outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label for="email" class="sr-only">Email</label>
              <div>
                <input
                  type="email"
                  name="email"
                  placeholder="Your best email!"
                  id="email"
                  autocomplete="email"
                  class="flex-auto w-full h-10 px-3 py-2 text-center border-transparent rounded-full appearance-none outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
                />
              </div>
            </div>
            <div class="sm:col-span-2">
              <label for="message" class="sr-only">Message</label>
              <div>
                <textarea
                  name="message"
                  id="message"
                  placeholder="Your message goes here..."
                  rows="4"
                  class="flex-auto w-full px-3 py-2 text-center border-transparent rounded-lg appearance-none resize outline outline-base-200 dark:outline-base-800 dark:text-white text-base-900 outline-inset shadow-base-800/5 dark:placeholder:text-base-400 dark:place-holder-text-base-600 duration-300 focus:border-base-500 focus:outline-none focus:outline-4 focus:outline-base-500/10 sm:text-sm bg-base-50 dark:bg-base-800"
                ></textarea>
              </div>
            </div>
          </div>
          <div class="mt-2">
            <Button type="submit" size="base" variant="default" class="w-full"
              >Submit
            </Button>
          </div>
        </form>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
