---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import Entries3 from "@/components/blog/BlogEntries3.astro";
import SubscribeCta from "@/components/blog/SubscribeCta.astro";
// Content
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="py-24">
      <div class="text-center">
        <Text
          tag="h1"
          variant="displayXL"
          class="text-balance dark:text-white text-base-900"
        >
          Welcome to my blog:
          <span class="font-display italic tracking-wide">
            News and thoughts
          </span>
        </Text>
        <Text
          tag="p"
          variant="textLG"
          class="mt-4 dark:text-base-400 text-base-600 text-balance"
        >
          I write about everything that I learn, join me on my journey.
        </Text>
      </div>

      <div class="flex flex-col gap-2 mt-12">
        {allPosts.map((post) => <Entries3 post={post} />)}
      </div>
    </Wrapper>
  </section>
  <SubscribeCta />
</BaseLayout>
