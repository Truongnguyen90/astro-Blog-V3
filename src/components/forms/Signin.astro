<section>
  <div class="px-8 py-24 mx-auto">
    <div class="text-center max-w-xl mx-auto">
      <h1 class="text-4xl tracking-tight text-balance text-white md:text-6xl">
        Sign in to
        <span class="font-display italic font-light tracking-wide">
          your dashboard
        </span>
      </h1>
      <p class="mt-4 text-base font-medium text-zinc-400 text-balance">
        Sign in and manage all your to-do lists and tasks in one place from our
        beautiful dashboard.
      </p>
    </div>

    <form class="mt-6 max-w-sm mx-auto">
      <div class="grid grid-cols-1 gap-2">
        <!-- Email Field -->
        <div>
          <label
            for="email"
            class="sr-only"
            >Email</label
          >
          <div>
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Enter your email"
              autocomplete="email"
              class="w-full flex-auto appearance-none rounded-full text-center ring-1 ring-zinc-800 text-white ring-inset border-transparent px-3 py-[calc(theme(spacing.2)-1px)] shadow-3xl shadow-zinc-800/5 placeholder:text-zinc-400 duration-300 h-9 focus:border-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-500/10 sm:text-sm bg-zinc-700/[0.15]"
            />
          </div>
        </div>
        <!-- Password Field -->
        <div>
          <label
            for="password"
            class="sr-only"
            >Password</label
          >
          <div>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Enter your password"
              autocomplete="current-password"
              class="w-full flex-auto appearance-none rounded-full text-center ring-1 ring-zinc-800 text-white ring-inset border-transparent px-3 py-[calc(theme(spacing.2)-1px)] shadow-3xl shadow-zinc-800/5 placeholder:text-zinc-400 duration-300 h-9 focus:border-blue-500 focus:outline-none focus:ring-4 focus:ring-blue-500/10 sm:text-sm bg-zinc-700/[0.15]"
            />
          </div>
        </div>
      </div>
      <div
        class="flex flex-wrap gap-4 justify-between items-center py-4 max-w-sm mx-auto">
        <div class="flex items-center">
          <input
            type="checkbox"
            name="terms"
            id="terms"
            class="rounded border-zinc-200 text-blue-400 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50 dark:bg-zinc-900 dark:border-zinc-700"
          />
          <label
            for="terms"
            class="ml-2 block text-sm leading-5 text-zinc-400">
            Remind me
          </label>
        </div>
        <a
          class="hover:text-blue-400 flex items-center text-sm gap-2 group text-zinc-400"
          href="/forms/reset"
          >Forgot your password? <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right size-4 group-hover:translate-x-2 duration-300"
            ><path
              stroke="none"
              d="M0 0h24v24H0z"
              fill="none"
            ></path><path d="M9 6l6 6l-6 6"></path></svg
          ></a
        >
      </div>
      <!-- Submit Button -->
      <div class="mt-2 max-w-sm mx-auto">
        <button
          type="submit"
          class="rounded-full bg-white px-4 flex justify-center gap-1 items-center py-2.5 h-9 text-sm font-semibold text-black hover:bg-zinc-200 duration-300 ring-1 ring-inset ring-zinc-200 group w-full"
          >Sign In</button
        >
      </div>
    </form>
    <div
      class="flex flex-wrap gap-4 justify-between items-center mt-2 max-w-sm mx-auto">
      <p class="text-sm text-zinc-400">
        Don't have an account?
      </p>
      <a
        class="hover:text-blue-400 flex items-center text-sm gap-2 group text-zinc-400"
        href="/forms/signup"
        >Sign up instead <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right size-4 group-hover:translate-x-2 duration-300"
          ><path
            stroke="none"
            d="M0 0h24v24H0z"
            fill="none"
          ></path><path d="M9 6l6 6l-6 6"></path></svg
        ></a
      >
    </div>
  </div>
</section>
