---
const { title, url, description, image, price } = Astro.props;
---

<div
  class="grid sm:grid-cols-2 p-2 ring-1 ring-zinc-800 duration-300 group shadow-3xl rounded-3xl hover:shadow-3xlHover bg-gradient-to-tr from-zinc-800 to-zinc-950">
  <div
    class="flex flex-col justify-between min-h-72 p-4 rounded-2xl relative overflow-hidden h-full">
    <div
      class="flex justify-between items-center font-medium text-white text-base uppercase">
      <p>
        {title}
      </p>
      <p>${price}</p>
    </div>

    <div class="gap-12 duration-300 flex flex-col items-start justify-between">
      <p class="text-zinc-400 leading-tight mt-8 text-balance line-clamp-3">
        {description}
      </p>
      <a
        href={url}
        title={title}
        class="rounded-full bg-white px-4 flex gap-1 items-center py-2.5 h-9 text-sm font-semibold text-black hover:bg-zinc-200 duration-300 ring-1 ring-inset ring-zinc-200">
        Read more <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right size-4 group-hover:translate-x-2 duration-300"
          ><path
            stroke="none"
            d="M0 0h24v24H0z"
            fill="none"
          ></path><path d="M9 6l6 6l-6 6"></path></svg
        >
      </a>
    </div>
  </div>
  <img
    class="w-full h-full object-cover rounded-2xl order-first sm:order-last"
    src={image}
    alt={title}
  />
</div>
