---
// Assets
import { Image } from "astro:assets";
import Tabler from "@/images/stacklogos/tabler.svg";
import Arc from "@/images/stacklogos/arc.svg";
import Astrojs from "@/images/stacklogos/astro.svg";
import Notes from "@/images/stacklogos/notes.svg";
import VSCode from "@/images/stacklogos/vscode.svg";
import Penpot from "@/images/stacklogos/penpot.svg";
import Tailwind from "@/images/stacklogos/tailwind.svg";
import LexingtonThemes from "@/images/stacklogos/lexingtonthemes.svg";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
// Structure the stack with their respective items
const stack = [
  {
    title: "Interior Design & 3D",
    items: [
      {
        stackLogo: Penpot,
        name: "SketchUp / Blender",
        about: "3D Modeling",
        description:
          "Primary tools for creating 3D visualizations of interior spaces, allowing clients to experience designs before implementation.",
      },
      {
        stackLogo: Tabler,
        name: "Adobe Creative Suite",
        about: "Design & Editing",
        description:
          "Photoshop for rendering enhancements, Illustrator for floor plans, and InDesign for creating professional presentations.",
      },
      {
        stackLogo: Penpot,
        name: "Mood Board Tools",
        about: "Concept Development",
        description:
          "Digital tools for creating mood boards and presenting design concepts to clients. Essential for the ideation phase.",
      },
    ],
  },
  {
    title: "Project Management",
    items: [
      {
        stackLogo: Notes,
        name: "Task Management",
        about: "Organization",
        description:
          "Tools like Notion or Asana for tracking project milestones, managing client communications, and organizing design deliverables.",
      },
      {
        stackLogo: LexingtonThemes,
        name: "Time Tracking",
        about: "Productivity",
        description:
          "Software for tracking billable hours, understanding time allocation across projects, and optimizing workflow efficiency.",
      },
      {
        stackLogo: Notes,
        name: "Cloud Storage",
        about: "File Management",
        description:
          "Cloud-based storage solutions for managing large design files, project photos, and client deliverables with version control.",
      },
    ],
  },
  {
    title: "Technology & Development",
    items: [
      {
        stackLogo: VSCode,
        name: "VS Code",
        about: "Code Editor",
        description:
          "For web development projects and automating repetitive tasks. Essential for building portfolio websites and digital tools.",
      },
      {
        stackLogo: Astrojs,
        name: "Astro + Tailwind",
        about: "Web Development",
        description:
          "Static site generator and CSS framework for building fast, modern websites. Used for this blog and client presentation sites.",
      },
      {
        stackLogo: Arc,
        name: "Arc Browser",
        about: "Web Browser",
        description:
          "Modern browser with excellent tab management and workspace organization. Perfect for managing multiple client projects simultaneously.",
      },
    ],
  },
  {
    title: "Communication & Collaboration",
    items: [
      {
        stackLogo: Notes,
        name: "Apple Notes",
        about: "Note-Taking",
        description:
          "Quick capture of design ideas, client meeting notes, and project brainstorming. Syncs seamlessly across all devices.",
      },
      {
        stackLogo: Notes,
        name: "Video Conferencing",
        about: "Remote Meetings",
        description:
          "Zoom or Google Meet for remote client consultations, virtual walkthroughs, and contractor coordination.",
      },
    ],
  },
];
---

<div class="flex flex-col mt-24 gap-12">
  {
    stack.map((section) => (
      <div class="flex flex-col gap-6 ">
        <p class="text-2xl italic tracking-wide dark:text-white text-base-900  font-display">
          {section.title}
        </p>

        <ul role="list" class="grid gap-2 sm:grid-cols-2 lg:col-span-2">
          {section.items.map((item) => (
            <li class="relative flex flex-col justify-between w-full h-full p-6 overflow-hidden shadow transition-all transform ring-1  min-h-72 rounded-2xl bg-linear-45 from-base-50 dark:from-base-800 duration-300 to-base-100 dark:to-base-950 ring-base-200 dark:ring-base-800 ring-inset group hover:shadow-light dark:hover:shadow-dark">
              <div class="flex items-center justify-between gap-x-4">
                <div>
                  <Text
                    tag="h3"
                    variant="textBase"
                    class="font-medium dark:text-white text-base-900 "
                  >
                    {item.name}
                  </Text>
                  <Text
                    tag="p"
                    variant="textSM"
                    class=" dark:text-base-400 text-base-600"
                  >
                    {item.about}
                  </Text>
                </div>
                <Image
                  src={item.stackLogo}
                  alt={item.name}
                  width={200}
                  height={200}
                  class="duration-300 size-8 rounded-xl dark:border dark:border-base-700 group-hover:-rotate-45"
                />
              </div>
              <Text
                tag="p"
                variant="textBase"
                class="mt-2 text-base  dark:text-base-400 text-base-600"
              >
                {item.description}
              </Text>
            </li>
          ))}
        </ul>
      </div>
    ))
  }
</div>
