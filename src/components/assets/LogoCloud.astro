---
// Assets
import { Image } from "astro:assets";
// import the logos
import logo1 from "@/images/brands/1.svg";
import logo2 from "@/images/brands/2.svg";
import logo3 from "@/images/brands/3.svg";
import logo4 from "@/images/brands/4.svg";
import logo5 from "@/images/brands/5.svg";
import logo6 from "@/images/brands/6.svg";
const logos = [
  { src: logo1, alt: "b1 Logo" },
  { src: logo2, alt: "b2 Logo" },
  { src: logo3, alt: "b3 Logo" },
  { src: logo4, alt: "b4 Logo" },
  { src: logo5, alt: "b5 Logo" },
  { src: logo6, alt: "b6 Logo" },
];
---

<div class="relative py-2 mx-auto mt-12 overflow-hidden overflow-x-hidden">
  <div class="justify-between w-full grid">
    <div
      class="absolute inset-0 left-0 z-10 from-white dark:from-base-950 via-transparent w-44 bg-gradient-to-r"
    >
    </div>
    <div
      class="absolute inset-0 left-0 z-10 ml-auto from-white dark:from-base-950 via-transparent w-44 bg-gradient-to-l"
    >
    </div>
  </div>
  <div
    class="relative flex items-center animate-marquee gap-4 whitespace-nowrap"
  >
    {
      logos.map((logo) => (
        <Image
          width={200}
          height={100}
          class="h-8 dark:filter-none filter invert"
          src={logo.src}
          alt={logo.alt}
        />
      ))
    }
  </div>
</div>
