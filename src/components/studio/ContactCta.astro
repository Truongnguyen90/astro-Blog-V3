  "/assets/logos/1.svg",
  "/assets/logos/2.svg",
  "/assets/logos/3.svg",
  "/assets/logos/4.svg",
  "/assets/logos/5.svg",
  "/assets/logos/6.svg",
  "/assets/logos/1.svg",
