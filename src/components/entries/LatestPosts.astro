---
const { title, url, description, pubDate, image } = Astro.props;
---

<article
  class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl px-8 pb-8 pt-80 sm:pt-48 lg:pt-80">
  <img
    src={image}
    alt={title}
    class="absolute inset-0 -z-10 h-full w-full object-cover"
  />
  <div class="absolute inset-0 -z-10 bg-gradient-to-t from-darkest"></div>

  <div
    class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300">
    <time datetime={pubDate} class="mr-8 text-white"> {pubDate}</time>
    <div class="-ml-4 flex items-center gap-x-4">
      <svg
        viewBox="0 0 2 2"
        class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50">
        <circle cx="1" cy="1" r="1"></circle>
      </svg>
    </div>
  </div>
  <h3 class="mt-3 text-lg font-semibold leading-6 text-white">
    <a href={url} title={title}>
      <span class="absolute inset-0"></span>
      {title}
      <span class="font-normal text-sm line-clamp-2">{description}</span>
    </a>
  </h3>
</article>
