---
const { title, subtitle, url, logo } = Astro.props;
---

<div
  class="grid sm:grid-cols-2 p-2 ring-1 ring-zinc-800 duration-300 group shadow-3xl rounded-3xl hover:shadow-3xlHover bg-gradient-to-tr from-zinc-800 to-zinc-950">
  <div
    class="flex flex-col justify-between min-h-72 p-4 rounded-2xl relative overflow-hidden h-full">
    <div class="flex justify-between items-center">
      <p class="font-medium text-white text-base uppercase">
        {title}
      </p>
      <div
        class="rounded-full bg-white p-1 text-black group-hover:-rotate-45 duration-300">
        <svg
          class="size-4"
          viewBox="0 0 20 20"
          fill="currentColor"
          aria-hidden="true">
          <path
            d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z"
          ></path>
        </svg>
      </div>
    </div>

    <div
      class="sm:-mb-20 sm:group-hover:mb-0 gap-12 duration-300 flex flex-col items-start justify-between">
      <p
        class="text-zinc-400 leading-tight text-balance">
        {subtitle}
      </p>
      <a
        href={url}
        title={title}
        class="rounded-full bg-white px-4 flex gap-1 items-center py-2.5 h-9 text-sm font-semibold text-black hover:bg-zinc-200 duration-300 ring-1 ring-inset ring-zinc-200">
        Read more
      </a>
    </div>
  </div>
  <img
    class="w-full h-full object-cover rounded-2xl order-first sm:order-last"
    src={logo}
    alt={title}
  />
</div>
